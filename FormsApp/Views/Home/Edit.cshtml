@model Product
@{
    ViewData["Title"] = "Edit";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <img src="~/img/@Model.Image" alt="" style="width:100px" />
        <input type="hidden" asp-for="@Model.Image" />
    </div>
    <div class="input-group mb-3">
        <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div class="mb-3 form-checkbox">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable"></label>
        <span asp-validation-for="IsAvailable"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

